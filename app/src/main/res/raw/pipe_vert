#version 300 es

precision highp float;

layout (location = 0) in vec4 position;
layout (location = 1) in vec2 tc;

uniform mat4 pr_matrix;
uniform mat4 vw_matrix; // TODO: GLES 3.0 doesn't support init like this mat4(1.0); Set the matrix in Java code instead.
uniform mat4 ml_matrix; // TODO: GLES 3.0 doesn't support init like this mat4(1.0); Set the matrix in Java code instead.

out vec2 vs_tc;
out vec3 vs_position;

void main()
{
	gl_Position = pr_matrix * vw_matrix * ml_matrix * position;

	vs_tc = tc;
	vs_position = vec3(vw_matrix * ml_matrix * position);
}